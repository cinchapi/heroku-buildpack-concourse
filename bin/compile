BUILD=$1
CACHE=$2
PROFILE=$BUILD/.profile.d
SCRIPT=$PROFILE/concourse.sh
mkdir -p $PROFILE

cd $BUILD

# Install Concourse
./gradlew clean installer
cd concourse-server/build/distributions
sh *bin

# Setup the SCRIPT that is sourced when the dyno is started
echo "alias concourse=$HOME/concourse-server/build/distributions/concourse-server/bin/concourse" >> $SCRIPT
echo "perl -pi -e 's/#http_port = 8817/http_port = $PORT/g' $HOME/concourse-server/build/distributions/concourse-server/conf/concourse.prefs" >> $SCRIPT
